<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dimensões otimizadas para TV Box, Android TV, Fire Stick -->
    
    <!-- Margens de segurança maiores para TV (overscan) -->
    <dimen name="tv_safe_margin">32dp</dimen>
    <dimen name="tv_grid_gutter">20dp</dimen>
    
    <!-- Player embutido maior e mais visível na TV -->
    <dimen name="tv_player_height">380dp</dimen>
    
    <!-- Carrossel com altura proporcional -->
    <dimen name="tv_carousel_height">480dp</dimen>
    
    <!-- Lista de canais mais larga para leitura confortável -->
    <dimen name="tv_channel_list_width">420dp</dimen>
    
    <!-- Botões de categoria maiores para foco D-Pad -->
    <dimen name="tv_category_height">64dp</dimen>
    
    <!-- Espaçamento generoso entre cards -->
    <dimen name="tv_card_spacing">20dp</dimen>
    
    <!-- Textos maiores para leitura a distância (10-foot UI) -->
    <dimen name="text_title">28sp</dimen>
    <dimen name="text_body">20sp</dimen>
    <dimen name="text_small">16sp</dimen>
    
    <!-- Paddings maiores -->
    <dimen name="padding_screen">32dp</dimen>
    <dimen name="padding_content">24dp</dimen>
    
    <!-- Escala de foco D-Pad (106 = 1.06) -->
    <dimen name="tv_focus_scale">1.08</dimen>
</resources>
